{
  "name": "declans-digital-aquarium",
  "version": "1.0.0",
  "description": "A digital aquarium with educational fish facts",
  "scripts": {
    "scss": "sass src/scss/main.scss css/main.css",
    "scss:watch": "sass --watch src/scss/main.scss css/main.css",
    "serve": "npx serve .",
    "dev": "npm-run-all --parallel scss:watch serve"
  },
  "devDependencies": {
    "sass": "^1.69.0",
    "npm-run-all": "^4.1.5",
    "serve": "^14.2.0"
  }
}
